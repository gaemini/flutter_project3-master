platform :osx, '10.15'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)
    
    # Set minimum macOS deployment target to 10.13
    target.build_configurations.each do |config|
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.13'
      
      # Fix BoringSSL-GRPC build issues
      if target.name == 'BoringSSL-GRPC'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'BORINGSSL_PREFIX=GRPC'
        # Remove problematic compiler flags
        config.build_settings.delete('OTHER_CFLAGS')
        config.build_settings.delete('OTHER_CPLUSPLUSFLAGS')
        config.build_settings['WARNING_CFLAGS'] = config.build_settings['WARNING_CFLAGS']&.gsub(/-G\s*/, '') || ''
      end
      
      # Remove unsupported compiler flags for all targets
      config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS']&.gsub(/-G\s*/, '') || ''
      config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS']&.gsub(/-G\s*/, '') || ''
      config.build_settings['OTHER_LDFLAGS'] = config.build_settings['OTHER_LDFLAGS']&.gsub(/-G\s*/, '') || ''
      
      # Clean up any problematic flags
      if config.build_settings['OTHER_SWIFT_FLAGS']
        config.build_settings['OTHER_SWIFT_FLAGS'] = config.build_settings['OTHER_SWIFT_FLAGS'].gsub(/-G\s*/, '')
      end
    end
  end
  
  # Update deployment target for the Pods project itself
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.13'
    config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS']&.gsub(/-G\s*/, '') || ''
    config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS']&.gsub(/-G\s*/, '') || ''
    config.build_settings['OTHER_LDFLAGS'] = config.build_settings['OTHER_LDFLAGS']&.gsub(/-G\s*/, '') || ''
  end
  
  # Fix for -G option in build scripts
  installer.pods_project.targets.each do |target|
    if target.name == 'BoringSSL-GRPC'
      target.build_phases.each do |phase|
        if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
          phase.shell_script = phase.shell_script.gsub(/-G\s*/, '')
        end
      end
    end
  end
end
